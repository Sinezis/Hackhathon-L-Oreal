{% extends 'base.html.twig' %}


{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h2 class="mx-sm-4"> Formulaire de connexion </h1>
    <form action="{{ path('app_login') }}" method="post">
    <div class="mx-sm-4 mb-2">
        <input type="text" id="username" name="_username" value="{{ email }}" placeholder="email">
    </div>
    <div class="mx-sm-4 mb-2">
        <input type="password" id="password" name="_password"  placeholder="password">
         <p><a href="{{ path('app_forgot_password_request') }}">Réinitialiser le mot de passe</a></p>
    </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <input type="hidden" name="_target_path" value="{{ path('app_index')}}">

        <button type="submit" class="btn btn-primary mx-sm-4 mb-2">login</button>
    </form>
    <h2 class="mx-sm-4"> Formulaire d'inscription </h2>
     <div class="mx-sm-4 mb-2">
    <p> Si vous n'avez pas créer de compte chez nous encore , veuillez cliquer sur le lien ci-dessous</p>
    <a href="{{ path('app_register') }}">S'inscrire</a>
    </div>
{% endblock %}